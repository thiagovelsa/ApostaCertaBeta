# ============================================================
# VStats API Configuration
# Veja DOCUMENTACAO_VSTATS_COMPLETA.md para detalhes da API
# ============================================================
VSTATS_API_URL=https://vstats-back-bbdfdf0bfd16.herokuapp.com/api
VSTATS_CLIENT_ID=seu_client_id_aqui
VSTATS_CLIENT_SECRET=seu_client_secret_aqui
VSTATS_API_TIMEOUT=10

# ============================================================
# TheSportsDB API Configuration
# ============================================================
THESPORTSDB_API_KEY=3
THESPORTSDB_API_TIMEOUT=5

# ============================================================
# Redis Cache Configuration
# ============================================================
# Local development
REDIS_URL=redis://localhost:6379/0

# Docker (descomente se usar docker-compose)
# REDIS_URL=redis://redis:6379/0

# Redis em nuvem (exemplo Upstash)
# REDIS_URL=redis://:password@host:port

# Cache TTLs (em segundos)
CACHE_TTL_SCHEDULE=3600          # 1 hora - Partidas não mudam frequentemente
CACHE_TTL_SEASONSTATS=21600      # 6 horas - Estatísticas mudam diariamente
CACHE_TTL_BADGES=604800          # 7 dias - Escudos não mudam
CACHE_ENABLED=true               # Habilitar/desabilitar cache

# ============================================================
# Application Configuration
# ============================================================
ENV=development                  # development | staging | production
DEBUG=true                        # Ativar modo debug (NUNCA em prod)
LOG_LEVEL=INFO                    # DEBUG | INFO | WARNING | ERROR | CRITICAL
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true                   # Auto-reload em desenvolvimento

# ============================================================
# Frontend Configuration
# ============================================================
FRONTEND_URL=http://localhost:3000
FRONTEND_DEV_URL=http://localhost:5173  # Vite dev server

# ============================================================
# CORS Configuration
# ============================================================
# Origens permitidas (separadas por vírgula)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Métodos HTTP permitidos
CORS_ALLOW_METHODS=GET,HEAD,OPTIONS

# Headers permitidos
CORS_ALLOW_HEADERS=Content-Type,Authorization

# ============================================================
# Rate Limiting
# ============================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100           # Requisições
RATE_LIMIT_PERIOD=60              # Por período em segundos (1 minuto)

# ============================================================
# Database Configuration (Futuro)
# ============================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/apostacerta
# DATABASE_POOL_SIZE=5
# DATABASE_ECHO=false             # Log SQL queries

# ============================================================
# Logging Configuration
# ============================================================
LOG_FORMAT=json                   # json | text
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760            # 10MB
LOG_BACKUP_COUNT=5                # Manter 5 arquivos rotacionados

# ============================================================
# Email Configuration (Futuro)
# ============================================================
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=seu_email@gmail.com
# SMTP_PASSWORD=seu_app_password
# SMTP_FROM=noreply@apostacerta.com

# ============================================================
# Monitoring & Observability
# ============================================================
SENTRY_DSN=                       # https://sentry.io/ (deixar vazio se não usar)
SENTRY_ENVIRONMENT=development
SENTRY_SAMPLE_RATE=1.0            # 100% em desenvolvimento

# ============================================================
# Security
# ============================================================
SECRET_KEY=sua_chave_secreta_muito_longa_aqui_12345  # Gerar com: openssl rand -hex 32
API_KEY_REQUIRED=false            # Exigir API key? (futuro)

# ============================================================
# Analytics & Tracking
# ============================================================
ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=

# ============================================================
# Feature Flags
# ============================================================
FEATURE_CACHE_ENABLED=true
FEATURE_RATE_LIMITING=true
FEATURE_CORS_ENABLED=true

# ============================================================
# Timezone
# ============================================================
TZ=America/Sao_Paulo

# ============================================================
# Development Tools
# ============================================================
PYTEST_WORKERS=4                  # Número de workers para pytest
COVERAGE_THRESHOLD=80             # Mínimo de cobertura de testes (%)

# ============================================================
# Notes
# ============================================================
